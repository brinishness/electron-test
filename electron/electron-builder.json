{
  "productName": "tears",
  //  "artifactName": "${productName}-${arch}-${os}.${ext}",
  "appId": "com.anzhuoapp.anxin",
  "asar": true,
  "files": [
    "electron/main.js",
    "electron/autoUpdate.js",
    "dist"
  ],
  "extraFiles": [
    "./videos",
    "./video"
  ],
  "directories": {
    "output": "./builder",
    "buildResources": "./"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "public/windows.ico",
    "installerHeaderIcon": "public/windows.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "forceCodeSigning": false,
    "icon": "public/macos.icns",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "linux": {
    "category": "com.anzhuoapp.anxin",
    "icon": "public/macos.png",
    "executableArgs": [
      "--no-sandbox",
      "--deb-no-default-config-files"
    ],
    "target": [
      {
        "target": "deb",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "rpm",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "target": [
    "nsis",
    "zip",
    "dmg",
    "pkg",
    "deb",
    "rpm"
  ],
  "protocols": {
    "name": "tears",
    "schemes": [
      "tears"
    ]
  },
  "publish": {
    "provider": "generic",
    // url:"http://xxx.xxx.xxx.xxx/xxx/xxx",
    // 升级包在服务器地址，不用指向具体的升级包文件
    // 在本地起的http服务器
    "url": "http://127.0.0.1:1234",
    "channel": "latest"
  }
}