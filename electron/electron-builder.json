{
  "productName": "tears",
  //  "artifactName": "${productName}-${arch}-${os}.${ext}",
  "appId": "com.anzhuoapp.anxin",
  "asarUnpack": [
    "node_modules/nertc-electron-sdk/build/Release"
  ],
  "files": [
    "electron/main.js",
    "electron/autoUpdate.js",
    "dist"
  ],
  "extraFiles": [
    "./videos",
    "./video"
  ],
  "directories": {
    "output": "./builder"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
  },
  "mac": {
    "forceCodeSigning": false,
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "linux": {
    "category": "com.anzhuoapp.anxin",
    "executableArgs": [
      "--no-sandbox", "--deb-no-default-config-files"
    ],
    "target": [
      {
        "target": "deb",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "rpm",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "target": [
    "nsis",
    "zip",
    "dmg",
    "pkg",
    "deb",
    "rpm"
  ],
  "protocols": {
    "name": "tears",
    "schemes": [
      "tears"
    ]
  },
  "publish": {
    "provider": "generic",
    // url:"http://xxx.xxx.xxx.xxx/xxx/xxx",
    // 升级包在服务器地址，不用指向具体的升级包文件
    // 在本地起的http服务器
    "url": "http://192.168.50.64:1234",
    "channel": "latest"
  }
}